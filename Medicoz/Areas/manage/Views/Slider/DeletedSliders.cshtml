
@{
    ViewData["Title"] = "DeletedSliders";
}

@model List<Slider>
@{
    int counter = 0;
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-8">
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Tittle1</th>
                    <th scope="col">Tittle2</th>
                    <th scope="col">Desc</th>
                    <th scope="col">Button1</th>
                    <th scope="col">Button2</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@slider.Id</td>
                        <td>@slider.Tittle</td>
                        <td>@slider.Tittle2</td>
                        <td>@slider.Desc</td>
                        <td>@slider.Button1</td>
                        <td>@slider.Button2</td>
                        <td>
                            <div><img style="max-width:100px" src="~/uploads/sliders/@slider.ImageUrl" alt=""></div>
                        </td>
                        <td>
                            <a asp-action="harddelete" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-outline-danger m-2">Delete</a>
                            <a asp-action="repair" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-outline-success m-2">Repair</a>
                            
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

