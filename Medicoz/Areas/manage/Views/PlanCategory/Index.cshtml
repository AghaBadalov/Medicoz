
@{
    ViewData["Title"] = "Index";
}
@model List<PlanCategory>
@{
    int counter = 0;
}
<table class="table">
    <thead>
        <a asp-action="create" asp-controller="PlanCategory" class="btn btn-success">Create</a>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Id</td>
                <td>@item.Name</td>


                <td>
                    <a asp-action="update" asp-controller="PlanCategory" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    <a asp-action="softdelete" asp-controller="PlanCategory" asp-route-id="@item.Id" class="btn btn-danger delete-button">Delete</a>

                </td>
            </tr>

        }
    </tbody>
</table>


