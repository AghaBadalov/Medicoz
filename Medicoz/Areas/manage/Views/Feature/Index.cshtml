
@{
    ViewData["Title"] = "Index";
}

@model List<Feature>
@{
    int counter = 0;
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-8">
        <a asp-action="create" asp-controller="feature" class="btn btn-outline-primary m-2">Create</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Tittle</th>
                    <th scope="col">Desc</th>
                    <th scope="col">Icon</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Feature feature in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@feature.Id</td>
                        <td>@feature.Tittle</td>
                        <td>@feature.Desc</td>
                        <td><div style="background-color:white;max-width:100px">@Html.Raw(feature.Icon)</div></td>
                        
                        
                        <td>
                            <a asp-action="softdelete" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-outline-danger m-2">Delete</a>
                            <a asp-action="update" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-outline-warning m-2">Update</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
